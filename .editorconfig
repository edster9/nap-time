# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root                     = true

[*]
end_of_line              = lf
insert_final_newline     = true
charset                  = utf-8
trim_trailing_whitespace = true
indent_style             = space
indent_size              = 2

[*.{md}]
indent_style             = tab
indent_size              = 2

[*.{yml,yaml}]
indent_style             = spaces
indent_size              = 2

[*.{html,css,scss,sass}]
indent_style             = tab
indent_size              = 2

[*.{js,jsx}]
indent_style             = tab
indent_size              = 2
